            emplo << j << " " ;
        }
        int l ;
        l = rand ( ) % 25 ;
        emplo << jobtypes [ l ] << " " ;
        j = rand ( ) % 5 ;
        emplo << j << " " ;
        int h [ 25 ] = {0} , x ;
        for ( int m = 0 ; m < j ; m ++ )
        {
            x = rand ( ) % 30 ;
            while ( h [ x ] != 0 ){
                x = rand ( ) % 30 ;
            }
            emplo << languages [ x ] << " " ;
            h [ x ] ++ ;
        }
        emplo << salaries [ l ] << " " ;
        c = ( rand ( ) % 42 ) + 48 ;
        for ( j = 0 ; j < 24 ; j ++ ) {
            while ( c > 57 && c < 65 ) {
                c = rand ( ) % 42 + 48 ;
            }
            emplo << ( char ) c  ;
            c = rand ( ) % 42 + 48 ;
        }
        emplo << " " ;
        j = rand ( ) % 31 ;
        if ( j > 29 ) {
            emplo << j << " " ;
            int m = rand ( ) % 12 ;
            if ( j == 29 && m == 2 ) {
                emplo  << m << " " ;
                m = ( rand ( ) % 13 + 498 ) * 4 ;
                emplo << m << " " ;
            }
            else{
                if ( j == 29 && m != 2 ){
                    emplo << j << " " ;
                    j = rand ( ) % 62 + 1980 ;
                    emplo << j << " " ;
                }
                else
                {
                    if ( j = 30 ) {
                        while ( m == 2 ) {
                            m = rand ( ) % 12 ;
                        }
                        emplo << m << " " ;
                        j = rand ( ) % 62 + 1980 ;
                        emplo << j << " " ;
